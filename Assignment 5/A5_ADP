Q2.

create
	trigger stud_after_update before update
	on task3
	for each row 
	begin
	set 
	new.TOTAL = new.SUB1 + new.SUB2 + new.SUB3 + new.SUB4 + new.SUB5,
	new.PER_MARKS = (new.TOTAL)/5,
	new.GRADE = case
		when new.PER_MARKS >= 90 then "EXCELLENT"
		when new.PER_MARKS >= 75 and new.PER_MARKS < 90 then "VERY GOOD"
		when new.PER_MARKS >= 60 and new.PER_MARKS < 75 then "GOOD"
		when new.PER_MARKS >= 40 and new.PER_MARKS < 60 then "AVERAGE"
		when new.PER_MARKS < 40 then "NOT PROMOTED"
	end;
	end$$
